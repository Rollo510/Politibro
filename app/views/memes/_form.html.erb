
<%= form_with model: @meme, local: :true do |form| %>

  <%= form.label :title, "Insert image location/url here: " %>
  <%= form.text_field :title, class: @meme.errors.any? ? "custom_errors" : nil %>

  <%= form.label :description, "Please include a brief description of this meme" %>
  <%= form.text_area :description %>

  <%= form.label :nsfw, "Check here if this image may be considered offensive or inappropriate" %>
  <%= form.check_box :nsfw %>


  <%= form.submit%>

<% end %>