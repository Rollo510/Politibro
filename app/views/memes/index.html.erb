<div class= "text-center"> <h1>POLITIBRO</h1> </div>
<br>
<br>
<h2><p>    Here are some of our freshest memes:</h2></p>
<br>
<br>
 <% if flash[:notice] %>
    <% flash[:notice] %>
<% end %>
<br>

<div class="card-deck">
<% @memes.each do |meme| %>
<div class="card" style="width: 18rem;">
  <img class="card-img-top" src="<%=meme.title%>" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title"><%= meme.description %> </h5>
    <p class="card-text"><small class="text-muted"> Posted: <%= meme.created_at.strftime("%B %d %Y, %l:%M%P") %> </small></p>
    <a href="<%= meme_path(meme.id) %>" class="btn btn-primary">Go</a>
  </div>
</div>
<% end %>
</div>

